source 'https://rubygems.org'

# Universal Gems
gem 'sinatra', require: 'sinatra/base'

# A simple, serverless database
gem 'sqlite3'

# Easy to use ORM
gem 'sinatra-activerecord', require: 'sinatra/activerecord'

# Toolset for dealing with data tasks, migrations etc
gem 'rake'

# Development Gems
group :development do

  # Faster/lighter web server than Web Brick
  gem 'thin'

  # Our replacement for 'rails console', allows us to load app code/toy around
  gem 'tux'

  # Allows us to auto-reload development code
  gem 'shotgun'

end
